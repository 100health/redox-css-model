			"declaration_lines":[

                "html:not( .no-flexbox ) & {",
                    "display: flex;",
                    "flex-flow: column nowrap;",
                    "justify-content: flex-start;",
                	"align-items: center;",
                "}",

                ".no-flexbox & {",
                    "position: relative;",
                    "transform-style: preserve-3d;",
                    "> * {",
                        "min-width: 1px;",
                        "/* using margin is probably better than transform, but ",
                        "it requires an exact width...lets see where it takes us first*/",
